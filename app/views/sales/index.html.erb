<% if current_user %>

<div id="index">
<nav id="subNav" class="navbar navbar-default">
  <div class="container">
   
        <h1 class="navbar-text">253 Sales </h1>

 <ul class="nav navbar-nav">       
    <!-- dropdown for time frame -->
    <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span id="sort-time">Sort by: <%= params[:view] %></span><span class="caret"></span></a>
          <ul id="dropdown-time" class="dropdown-menu">
            <li><%= link_to "All", params.merge(:view => "all")%></li>
            <li><%= link_to "Today", params.merge(:view => "today")%></li>
            <li><%= link_to "Weekly", params.merge(:view => "weekly")%></li>
            <li><%= link_to "Monthly", params.merge(:view => "monthly")%></li>
            <li><a href="#">Year to Date</a></li>
          </ul>
        </li>
    <!-- dropdown for order type -->
    <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Sort by: <%= params[:order_type] %><span class="caret"></span></a>
          <ul class="dropdown-menu">
          <!-- <= link_to "lowest prices", :view => "price_lowest", :other_param => params[:other] %>
              link_to "Page", params.merge(:c => "e")
           -->
            <li><%= link_to "All", params.merge(:order_type => "all")%></li>
            <li><%= link_to "Sales", params.merge(:order_type => "sales")%></li>
            <li><%= link_to "Quotes", params.merge(:order_type => "quotes")%></li>
          </ul>
    </li>
  </ul>

    <a href="/sales/new"><button class="btn btn-primary btn-default navbar-btn color-white navbar-right"><h4>Add</h4></button></a>

  </div>
</nav>
  
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <div class="panel panel-default">
        <div class="panel-heading">Today Sales</div>
        <div class="panel-body">
          <h1 class="center"><%= "$#{@daily_sales_amount}" %></h1>
        </div>
      </div>
    </div>
    <div class="col-xs-3">
      <div class="panel panel-default">
        <div class="panel-heading">Today Quotes</div>
        <div class="panel-body"><h1 class="center"><%= "$#{@daily_quotes_amount}" %></h1></div>
      </div>
    </div>
    <div class="col-xs-3">
      <div class="panel panel-default">
        <div class="panel-heading">Weekly Sales</div>
        <div class="panel-body"><h1 class="center"><%= "$#{@weekly_sales_amount }" %></h1></div>
      </div>
    </div>
    <div class="col-xs-3">
      <div class="panel panel-default">
        <div class="panel-heading">Weekly Quotes</div>
        <div class="panel-body"><h1 class="center"><%= "$#{@weekly_quotes_amount }" %></h1></div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <table class="table table-hover">
        <tr>
          <th>Date</th>
          <th>Order Type</th>
          <th>By</th>
          <th>Customer</th>
          <th>Amount</th>
          <th>Type</th>
          <th>Due Date</th>
          <th>Payment</th>
          <th>Note</th>

        </tr>
        <% @sales.each do | sale | %>

        <tr>
          <%=  %>
          <td><%= Date.parse(sale.date.to_s) %></td>
          <td><%= sale.order_type %></td>
          <td><%=sale.by %></td>
          <td><%=sale.customer %></td>
          <td><%="$#{sale.amount}" %></td>
          <td><%=sale.product_type %></td>
          <td><%=sale.due_date %></td>
          <td><%=sale.payment %></td>
          <td><%=sale.note %></td>
        </tr>

        <% end %>
      </table>
    </div>
  </div>
</div>
</div>
<% end %>

